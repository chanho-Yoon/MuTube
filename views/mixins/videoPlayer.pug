mixin videoPlayer(video ={})
  .videoPlayer#jsVideoPlayer
    video(src=`/${video.src}`)#videoId
    .videoPlayer__controls
      .videoPlayer__column
        span#jsVolume.jsVolume
          i.fas.fa-volume-up#jsVolumeButton
        input.videoPlayer__volume#jsVolumeRange(type="range",min="0",max="1",step="0.1", value="1")
        span.jsTimeSlide
          span#currentTime 00:00:00
          |/&nbsp&nbsp
          span#totalTime 00:00:00
      .videoPlayer__column
        span#jsPlayButton
          i.fas.fa-play
      .videoPlayer__column
        span#jsScreenButton
          i.fas.fa-expand
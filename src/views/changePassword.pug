extends layouts/main

block content
  .form-container
    form(action=`/users${routes.changePassword}`, method="post")
      input(type="password", name="oldPassword", placeholder="현재 비밀번호" ,required=true)
      input(type="password", name="newPassword", placeholder="새로운 비밀번호",required=true)
      input(type="password", name="checkPassword", placeholder="새로운 비밀번호 확인",required=true)
      input(type="submit", value="확인")
